# KarmAnk - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ============================================
# Application Configuration
# ============================================
VITE_APP_NAME=KarmAnk
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# ============================================
# API Configuration
# ============================================
# Backend API base URL (leave empty for client-side only mode)
VITE_API_BASE_URL=

# API timeout in milliseconds
VITE_API_TIMEOUT=10000

# ============================================
# Google AI Configuration (for rephrasing feature)
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
VITE_GOOGLE_API_KEY=

# ============================================
# Authentication (Future - replace mock auth)
# ============================================
# Firebase Configuration (when implemented)
# VITE_FIREBASE_API_KEY=
# VITE_FIREBASE_AUTH_DOMAIN=
# VITE_FIREBASE_PROJECT_ID=
# VITE_FIREBASE_STORAGE_BUCKET=
# VITE_FIREBASE_MESSAGING_SENDER_ID=
# VITE_FIREBASE_APP_ID=

# Supabase Configuration (alternative)
# VITE_SUPABASE_URL=
# VITE_SUPABASE_ANON_KEY=

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CHATBOT=false
VITE_ENABLE_TTS=false
VITE_ENABLE_PDF_EXPORT=false

# ============================================
# Analytics & Monitoring
# ============================================
# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=

# ============================================
# Development Settings
# ============================================
# Enable debug mode (shows detailed logs)
VITE_DEBUG_MODE=true

# Enable React Query DevTools
VITE_ENABLE_DEVTOOLS=true

# Mock API responses (for development)
VITE_MOCK_API=false
